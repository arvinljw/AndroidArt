<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.arvin.androidart.MainActivity">

    <include layout="@layout/layout_header" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_intent_analyze"
                style="@style/main_text"
                android:text="Intent分析" />

            <include layout="@layout/ui_layout_divider" />

            <TextView
                android:id="@+id/tv_custom_toast"
                style="@style/main_text"
                android:text="自定义Toast" />

            <include layout="@layout/ui_layout_divider" />

            <TextView
                android:id="@+id/tv_multi_process"
                style="@style/main_text"
                android:text="多进程通信" />

            <include layout="@layout/ui_layout_divider" />

            <TextView
                android:id="@+id/tv_anim"
                style="@style/main_text"
                android:text="属性动画" />

            <include layout="@layout/ui_layout_divider" />

            <!--<TextView-->
            <!--android:id="@+id/tv_handler"-->
            <!--style="@style/main_text"-->
            <!--android:text="消息机制" />-->
            <!--<include layout="@layout/ui_layout_divider" />-->

            <TextView
                android:id="@+id/tv_service"
                style="@style/main_text"
                android:text="服务" />

            <include layout="@layout/ui_layout_divider" />

            <TextView
                android:id="@+id/tv_broadcast"
                style="@style/main_text"
                android:text="广播" />

            <include layout="@layout/ui_layout_divider" />

            <TextView
                android:id="@+id/tv_provider"
                style="@style/main_text"
                android:text="内容提供者" />
            <include layout="@layout/ui_layout_divider" />

            <TextView
                android:id="@+id/tv_retrofit"
                style="@style/main_text"
                android:text="Retrofit Demo" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
